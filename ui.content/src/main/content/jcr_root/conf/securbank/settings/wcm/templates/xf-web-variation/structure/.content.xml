<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:deviceGroups="[mobile/groups/securbank]"
        cq:template="/conf/securbank/settings/wcm/templates/xf-web-variation"
        jcr:primaryType="cq:PageContent"
        sling:resourceType="securbank/components/xfpage">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="securbank/components/container"
            editable="{Boolean}true"/>
        <cq:responsive jcr:primaryType="nt:unstructured">
            <breakpoints jcr:primaryType="nt:unstructured">
                <phone
                    jcr:primaryType="nt:unstructured"
                    title="Smaller Screen"
                    width="{Long}768"/>
                <tablet
                    jcr:primaryType="nt:unstructured"
                    title="Tablet"
                    width="{Long}1200"/>
                <phone-portrait
                    jcr:primaryType="nt:unstructured"
                    title="480px"
                    width="{Long}480"/>
                <tablet-portrait
                    jcr:primaryType="nt:unstructured"
                    title="768px"
                    width="{Long}768"/>
                <phone-landscape
                    jcr:primaryType="nt:unstructured"
                    title="992px"
                    width="{Long}992"/>
                <tablet-landscape
                    jcr:primaryType="nt:unstructured"
                    title="1200px"
                    width="{Long}1200"/>
            </breakpoints>
        </cq:responsive>
    </jcr:content>
</jcr:root>
